@using SequencesWebApp.ViewModels
@model SequenceDetailViewModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@if (Model == null)
{
    <div>
        <p>Sequence was not found.</p>
    </div>
}
else
{
    <h1>Sequence Details</h1>

    <p><b>Integers: </b>@string.Join(", ", @Model.Integers.Select(x => x.Value))</p>

    <p><b>Order: </b>@(@Model.IsAscending ? "Ascending" : "Descending")</p>

    <p><b>Sorting Time: </b>@Model.SortingTime</p>

    <a asp-controller="Sequence" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-primary">Delete</a>
}


